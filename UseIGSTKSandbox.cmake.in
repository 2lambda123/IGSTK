#
# This file sets up include directories, link directories, and
# compiler settings for a project to use IGSTKSandbox.  It should not be
# included directly, but rather through the IGSTKSandbox_USE_FILE setting
# obtained from IGSTKSandboxConfig.cmake.
#

IF(IGSTKSandbox_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${IGSTKSandbox_BUILD_SETTINGS_FILE})
ENDIF(IGSTKSandbox_BUILD_SETTINGS_FILE)

# Add compiler flags needed to use IGSTKSandbox.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${IGSTKSandbox_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${IGSTKSandbox_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${IGSTKSandbox_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${IGSTKSandbox_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${IGSTKSandbox_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use IGSTKSandbox.
INCLUDE_DIRECTORIES(BEFORE ${IGSTKSandbox_INCLUDE_DIRS})

# Add link directories needed to use IGSTKSandbox.
LINK_DIRECTORIES(${IGSTKSandbox_LIBRARY_DIRS})

