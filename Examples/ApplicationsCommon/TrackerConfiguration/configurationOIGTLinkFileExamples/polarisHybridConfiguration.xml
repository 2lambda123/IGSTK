<?xml version="1.0" encoding="ISO-8859-1"?>
 
<tracking_system type = "polaris hybrid">

    <refresh_rate> 30 </refresh_rate>

    <serial_communication> 
      <com_port>3</com_port>
      <baud_rate>115200</baud_rate> 
      <data_bits>8</data_bits>
      <parity>N</parity> 
      <stop_bits>1</stop_bits> 
      <hand_shake>0</hand_shake> 
    </serial_communication>

    <tool>
      <name> reference frame </name> 
      <control_box_port>1</control_box_port>
      <send_to> 255.255.255.0:1000</send_to> 
    </tool>

    <tool>
      <name> bayonet probe </name> 
      <srom_file>E:/users/zivy/probe.rom</srom_file>
      <calibration_file>E:/users/zivy/bayonetCalibration.xml</calibration_file>
      <send_to> 255.255.255.0:1001</send_to> 
    </tool>

    <tool>
      <name> US probe </name> 
      <control_box_port>2</control_box_port>      
      <calibration_file>E:/users/zivy/USCalibration.xml</calibration_file>
      <send_to> 255.255.255.0:1002</send_to> 
    </tool>

</tracking_system>

