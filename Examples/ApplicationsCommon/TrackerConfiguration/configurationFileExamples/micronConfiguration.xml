<?xml version="1.0" encoding="ISO-8859-1"?>
 
<tracking_system type = "micron">

    <refresh_rate> 20 </refresh_rate>
    
    <camera_calibration_directory>
         C:/MicronTracker/CalibrationFiles
    </camera_calibration_directory>
    
    <initialization_file> 
      C:/MicronTracker/MTDemoCPP.ini     
    </initialization_file>
    
    <templates_directory> 
      C:/MicronTracker/Markers
    </templates_directory>
    
    <tool usage="reference">
      <name> referenceMarker </name> 
    </tool>

    <tool>
      <name> bayonetProbe </name> 
      <marker_name> t1 </marker_name> 
      <calibration_file>E:/users/zivy/bayonetCalibration.xml</calibration_file>
    </tool>

    <tool>
      <name> usProbe </name> 
      <marker_name> t2 </marker_name> 
      <calibration_file>E:/users/zivy/USCalibration.xml</calibration_file>
    </tool>

</tracking_system>
